rule "Penalty Renewal Fitness  old vehicle 0 to 3"
    when
        t : FeeRuleModel( oldVehicle , penalty == 0 , monthCount > 0 , monthCount < 4 )
    then
        System.out.println("Penalty Renewal Fitness Fee  old vehicle 0 to 3 ");
        t.setPenalty(25);
        update( t );
end

rule "Penalty Renewal Fitness old vehicle 4 to 6"
    when
        t : FeeRuleModel( oldVehicle , penalty == 0 , monthCount > 3 , monthCount < 7)
    then
        System.out.println("Penalty Renewal Fitness Fee  old vehicle 4 to 6");
        t.setPenalty(50);
        update( t );
end

rule "Penalty Renewal Fitness old vehicle 7 to 9"
    when
        t : FeeRuleModel( oldVehicle , penalty == 0 , monthCount > 6 , monthCount < 10 )
    then
        System.out.println("Penalty Renewal Fitness Fee old vehicle 7 to 9");
        t.setPenalty(75);
        update( t );
end

rule "Penalty Renewal Fitness old vehicle greater than 10"
    when
        t : FeeRuleModel( oldVehicle , penalty == 0 , monthCount > 9 )
    then
        System.out.println("Penalty Renewal Fitness old vehicle greater than 10");
        t.setPenalty(100);
        update( t );
end

rule "Penalty Renewal Fitness new vehicle "
    when
        t : FeeRuleModel( !oldVehicle , penalty == 0 , daysCount >0 )
    then
        System.out.println("Penalty Renewal Fitness Fee  new vehicle ");
        t.setPenalty(50*t.getDaysCount());
        update( t );
end



rule "Total TR and PR Fee renewal Fitness  Fee"
    when
        t : FeeRuleModel(totalFitnessFee == 0)
    then
        System.out.println("Inside Total TR and PR Fee renewal Fitness  Fee "+ t.getVehicleClassCategory());
        t.setTotalFitnessFee(t.getFitnessFee() + t.getFitnessService() +  t.getPenalty());
        update( t );
end
