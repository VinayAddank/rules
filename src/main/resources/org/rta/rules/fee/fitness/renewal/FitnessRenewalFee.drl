rule "Fitness renewal Fee  Fee 600 rs"
    when
        t : FeeRuleModel( fitnessFee == 0  , "CHST" not contains vehicleClassCategory , gvw < 7500)
    then
        System.out.println("Inside Fitness renewal Fee  Fee 600 rs");
        t.setFitnessFee(600);
        update( t );
end

