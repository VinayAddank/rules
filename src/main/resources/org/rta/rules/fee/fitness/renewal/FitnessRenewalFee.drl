package org.rta.rules.fee.fitness.renewal
 
import org.rta.rules.model.FeeRuleModel;
 
rule "Fitness  renewal Service charge Fee 60 rs"
    when
        t : FeeRuleModel("ARKT".contains(vehicleClassCategory) , fitnessService == 0 )
    then
        System.out.println("Inside Fitness renewal Service charge Fee 60 rs");
        t.setFitnessService(60);
        update( t );
end


rule "Fitness renewal Service charge  Fee 120 rs"
    when
        t : FeeRuleModel("CHST" not contains vehicleClassCategory , fitnessService == 0 )
    then
        System.out.println("Inside Fitness renewal Service charge Fee 120 rs");
        t.setFitnessService(120);
        update( t );
end


rule "Fitness renewal Fee  Fee 400 rs"
    when
